<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<SplitPane dividerPositions="0.5" minWidth="500.0" orientation="VERTICAL" prefHeight="800.0" prefWidth="1100.0"
           xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controllers.MainController">
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Label fx:id="labelQuestion" text="Question" AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="16.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </AnchorPane>
    <AnchorPane prefHeight="200.0" prefWidth="200.0">
        <Label text="Ответ" textFill="#4b4b4b" AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="8.0">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <VBox alignment="TOP_CENTER" prefHeight="422.0" prefWidth="1098.0" AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="32.0">
            <TextArea fx:id="textAreaAnswer" prefHeight="200.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                </VBox.margin>
                <font>
                    <Font size="24.0"/>
                </font>
            </TextArea>
            <Button mnemonicParsing="false" onAction="#onClickNext" prefHeight="64.0" prefWidth="194.0"
                    text="Далее">
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
        </VBox>
    </AnchorPane>
</SplitPane>
